{
  "name": "macoolka-io",
  "version": "0.2.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "author": "fastspeeed@gmail.com",
  "scripts": {
    "reinstall": "rm -rf node_modules/ && yarn install",
    "clean": "rm -rf lib/ coverage/ ",
    "lint": "tslint -p tsconfig.json",
    "lint:fix": "tslint -p tsconfig.json --fix",
    "test": "jest",
    "build": "rm -rf lib/ && tsc ",
    "precommit": "npm run lint",
    "prepush": "npm run test",
    "all": "npm run clean && tsc && jest  --coverage && tslint -p tsconfig.json",
    "coverage": "rimraf coverage && jest  --coverage"
  },
  "dependencies": {
    "fp-ts": "^2.0.2",
    "macoolka-object": "^0.2.1",
    "io-ts": "^2.0.1",
    "macoolka-i18n": "^0.2.0",
    "macoolka-predicate": "^0.2.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.2",
    "jest": "^24.9.0",
    "jest-cli": "^24.9.0",
    "macoolka-typescript": "^0.2.1",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.19.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,tsx,ts}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(./src/*|\\.(test|spec))\\.(ts|tsx)$"
  },
  
  "repository": {
    "type": "git",
    "url": "https://github.com/macoolka/macoolka-io.git"
  },
  "homepage": "https://github.com/macoolka/macoolka-io",
  "keywords": [
    "macoolka",
    "typescript",
    "algebraic-data-types",
    "functional-programming"
  ],
  "license": "MIT"
}
